<div class="btn-group mr-2" role="group" aria-label="Sort filter">
  <div class="btn-group" role="group">
    <button id="dropdown-sort-type" type="button"  disabled={{isSortDisabled}} class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <span class="d-none d-sm-inline">{{selectedSort.label}}</span>
    </button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdown-sort-type">
      {{#each filteredSortOptions as |sortOption|}}
        {{#link-to routeName (query-params sortBy=sortOption.key) class="dropdown-item"}}{{sortOption.label}}{{/link-to}}
      {{/each}}
    </div>
  </div>
  <button type="button" class="btn btn-primary" disabled={{isSortDisabled}} {{action "toggleDirection"}}>
    {{entypo-icon (if selectedAscending "arrow-up" "arrow-down")}}
  </button>

</div>

