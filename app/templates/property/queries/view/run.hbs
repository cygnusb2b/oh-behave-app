<div class="card-body">
  <h4 class="card-title">Run Report</h4>
  {{run-query/date-type disabled=isRunning dateType=dateType dateTypes=dateTypes onChange=(action clearDateRange)}}

  {{#if calendarComponent}}
    {{component calendarComponent class="mt-3" range=range disabled=isRunning}}
  {{/if}}
</div>
<div class="card-footer">
  <button class="btn btn-lg btn-success" disabled={{isDisabled}} {{action "run"}}>{{entypo-icon "download"}} Run Report</button>
</div>
