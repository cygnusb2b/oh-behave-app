<div class="row">
  <div class="col">
    <div class="form-group">
      <label for="query.name">Name</label>
      {{input
        type="text"
        required=true
        value=model.query.name
        class="form-control form-control-lg"
        id="query.name"
        aria-describedby="query.name.help"
        placeholder="My Awesome Query"
      }}
      <small id="query.name.help" class="form-text text-muted">A friendly name that identifies the contents or results of the query.</small>
    </div>
  </div>
</div>

{{criteria-builder criteria=model.query.criteria propertyKey=model.property.key}}

